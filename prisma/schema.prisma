generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

/// For Admin & Students

model Admin {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  walletAddress String   @unique
  dateAdded     DateTime @default(now())
}

model Student {
  id            Int      @id @default(autoincrement())
  firstName     String
  middleName    String?
  lastName      String
  studentId     String   @unique
  email         String   @unique
  walletAddress String   @unique
  course        String
  yearLevel     Int
  dateAdded     DateTime @default(now())

  diplomas      Diploma[]
}

// The Diploma

model Diploma {
  id              Int      @id @default(autoincrement())
  credentialType  String   @default("Diploma")
  student         Student  @relation(fields: [studentId], references: [studentId])
  studentId       String
  firstName       String
  middleName      String?
  lastName        String
  program         String
  credentialTitle String
  issuerEmail     String
  description     String?
  dateAdded       DateTime @default(now())
  minted          Boolean  @default(false)
  transactionHash String?
}
